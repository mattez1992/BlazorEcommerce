<center><h2>Top Products of Today</h2></center>
@if (PorductService.Products == null || PorductService.Products.Count == 0)
{
    <span>@PorductService.Message</span>
}
else
{
    <div class="container">
        <div class="row justify-content-start">
            @foreach (var product in PorductService.Products)
            {
                @if (product.Featured)
                {
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 my-1" style="width: 16rem;">
                        <div class="card ">
                            <a href="product/@product.Id">
                                <img src=@product.ImageUrl class="card-img-top img-fluid img-thumbnail" alt="@product.Title">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><a href="product/@product.Id">@product.Title</a></h5>
                                @if(product.Variants != null && product.Variants.Count > 0)
                                {
                                    <h5 class="price">
                                        $@product.Variants[0].Price
                                    </h5>
                                }
                            </div>
                        </div>

                    </div>
                }
            }
        </div>

    </div>
}