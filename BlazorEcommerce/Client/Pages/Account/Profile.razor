@page "/profile"
@attribute [Authorize]
<AuthorizeView>
    <h3>You are loggend in with <i>@context.User.Identity.Name</i></h3>
</AuthorizeView>
<div class="row p-5">

    <div class="col-8">Address Component</div>
    <div class="col-4 border-3">
        <div class="card">
            <h5 class="card-header">Change Password</h5>
            <div class="card-body">

                <EditForm class="border-1" Model="_updateUserPasswordDto" OnValidSubmit="ChangePassword">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <div class="mb-3">
                        <label for="password">New Password</label>
                        <InputText id="password" @bind-Value="_updateUserPasswordDto.Password" class="form-control" type="password" />
                        <ValidationMessage For="@(() => _updateUserPasswordDto.Password)" />
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword">Confirm New Password</label>
                        <InputText id="confirmPassword" @bind-Value="_updateUserPasswordDto.ConfirmPassword" class="form-control" type="password" />
                        <ValidationMessage For="@(() => _updateUserPasswordDto.ConfirmPassword)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Change</button>
                </EditForm>

            </div>
            <div class="card-footer text-muted">
                @_message
            </div>
        </div>
    </div>
</div>

