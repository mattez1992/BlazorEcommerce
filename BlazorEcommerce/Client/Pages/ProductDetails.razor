@page "/product/{id:int}"

@if (_product == null)
{
    <span>@_message</span>
}
else
{
    <div class="d-flex align-items-start">
        <div class="flex-shrink-0">
            <img src=@_product.ImageUrl alt=@_product.Title/>
        </div>
        <div class="flex-grow-1 ms-3">
            <h2 class="mb-0">@_product.Title</h2>
            <p>@_product.Description</p>
            <h4 class="price">
                $@_product.Price
            </h4>
        </div>
    </div>
}

