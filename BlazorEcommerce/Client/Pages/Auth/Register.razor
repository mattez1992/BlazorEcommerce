@page "/register"
<PageTitle>Register</PageTitle>

<EditForm class="container" Model="_userRegristrationDTO" OnValidSubmit="HandleOnSubmit">
    <h3>Reigister</h3>
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="email">Email</label>
        <InputText id="email" @bind-Value="_userRegristrationDTO.Email" class="form-control" />
        <ValidationMessage For="@(() => _userRegristrationDTO.Email)" />
    </div>
    <div class="mb-3">
        <label for="password">Password</label>
        <InputText id="password" @bind-Value="_userRegristrationDTO.Password" class="form-control" type="password" />
        <ValidationMessage For="@(() => _userRegristrationDTO.Password)" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Confirm Password</label>
        <InputText id="confirmPassword" @bind-Value="_userRegristrationDTO.ConfirmPassword" class="form-control" type="password" />
        <ValidationMessage For="@(() => _userRegristrationDTO.ConfirmPassword)" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <div class="@_messageCss">
        <span>@_message</span>
    </div>
</EditForm>

